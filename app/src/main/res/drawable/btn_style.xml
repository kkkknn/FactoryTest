<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_selected="true">
    <shape>
        <!-- Corner的属性是设置圆角的半径的-->
        <corners
            android:radius="14dp"/>
        <!-- Button里面的文字与Button边界的间隔-->
        <padding
            android:bottom="10dp"
            android:left="50dp"
            android:right="50dp"
            android:top="10dp" />
        <solid android:color="#DA0F0F" />
    </shape>
</item>
